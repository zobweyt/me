---
import { tv } from "tailwind-variants";

const styles = tv({
  base: [
    "prose max-w-full",
    "prose-p:text-justify prose-p:font-serif",
    "prose-code:before:hidden prose-code:after:hidden",
    "prose-pre:ring-1 prose-pre:ring-black/15",
    "prose-li:text-justify prose-li:font-serif",
    "prose-img:m-auto",
  ],
});
---

<article class={styles()}>
  <slot />
</article>
