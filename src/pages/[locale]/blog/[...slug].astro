---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Time from "@components/Time.astro";
import { readingTime as getReadingMinutes } from "@lib/utils";
import Article from "@components/Article.astro";
import { useTranslations } from "@i18n";

const t = useTranslations(Astro.currentLocale);

export const prerender = true;

export async function getStaticPaths() {
  const collection = await getCollection("blog");
  const posts = collection.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

  return posts.map(function (post) {
    const locale = post.id.split("/")[0];

    return {
      params: { locale, slug: `${post.slug.replace(`${locale}/`, "")}` },
      props: post,
    };
  });
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<PageLayout title={post.data.title} description={post.data.description}>
  <Article>
    <div class="space-y-1 my-10">
      <div class="flex items-center gap-1.5">
        <div class="font-base text-sm">
          <Time date={post.data.date} />
        </div>
        Â·
        <div class="font-base text-sm">
          {getReadingMinutes(post.body)} {t("minread")}
        </div>
      </div>
      <hgroup>
        <h1>{post.data.title}</h1>
        <p>{post.data.description}</p>
      </hgroup>
    </div>
    <Content />
  </Article>
</PageLayout>
