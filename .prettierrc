{
  "$schema": "https://json.schemastore.org/prettierrc",
  "endOfLine": "lf",
  "jsxSingleQuote": false,
  "printWidth": 120,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"],
  "tailwindStylesheet": "./src/styles/index.css",
  "tailwindAttributes": [
    "enterActiveClass",
    "enterClass",
    "enterToClass",
    "exitActiveClass",
    "exitClass",
    "exitToClass",
    "class"
  ],
  "tailwindFunctions": ["clsx", "tv"]
}
